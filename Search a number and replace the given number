#include<stdio.h>
int main()
{
    int a[100],i,n,x,y;
    printf("\n enter the limit:");
    scanf("%d",&n);
    printf("enter the n elements in array:");
      for(i=0;i<n;i++)
    scanf("%d",&a[i]);
    
    printf("\n enter number to search:");
    scanf("%d",&x);
    
    printf("\n enter the number to replace:");
    scanf("%d",&y);
    
    for(i=0;i<n;i++)
      {
         if(a[i]==x)
          {
             a[i]=y;
          }
      }
      
      printf("\n Replace array:");
       for(i=0;i<n;i++)
       {
          printf("%d\t",a[i]);
       }
}
